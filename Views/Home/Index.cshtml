@model Neo

<head>
    <script src="~/js/form_validation.js" type="text/javascript"></script>
</head>

@{
    ViewData["Title"] = "Home Page";
}

<div class="d-grid gap-1">

    <div class="row">

        <div class="col-md-5 align-self-end">

            <form class="form-control " name="dateForm" asp-action="Index" onsubmit="validate_input()">

                <div class="row">
                    <label class="col-sm-4 col-form-label-sm">Start Date</label>
                    <label class="col-sm-4 col-form-label-sm">End Date</label>
                </div>

                <div class="row">

                    <div class="col-sm-4">
                        <input type="date" name="startDate" value=@Model.DataStart />
                    </div>

                    <div class="col-sm-4">
                        <input type="date" name="endDate" value=@Model.DataEnd />
                    </div>

                    <div class="col-sm-4">
                        <input type="submit" value="Get data" onclick="javascrip:validate_input()" />
                    </div>

                </div>

            </form>

        </div>

        <div class="col-md-5">

            <h1 class="display-4">Welcome</h1>
            <p> Observed objects in range: @Model.ElementsCount</p>

        </div>
        <div class="col-md-5 border">

            <form asp-action="Export" asp-controller="Home" method="post">
                <input type="hidden" name="GridHtml" />
                <input type="submit" value="Export" class="btnSubmit" />
            </form>

        </div>
    </div>

    <div class="row">
        <table class="table table-bordered">
            <tr>
                <th>Date</th>
                <th>Name</th>
                <th>Velocity(km/s)</th>
                <th>Max Diameter(km)</th>
                <th>Min Diameter(km)</th>
                <th>Orbiting Body</th>
            </tr>

            @foreach (var kvp in Model.NearEarthObjects)
            {
                @foreach (var asteroid in kvp.Value)
                {
                    <tr>
                        <td>@kvp.Key</td>
                        <td>@asteroid.Name</td>
                        <td>@asteroid.ApproachData[0].Velocity["kilometers_per_second"]</td>
                        <td>@asteroid.EstDiameter["kilometers"].max</td>
                        <td>@asteroid.EstDiameter["kilometers"].min</td>
                        <td>@asteroid.ApproachData[0].OrbitingBody</td>
                    </tr>
                }
            }

        </table>
    </div>

</div>
